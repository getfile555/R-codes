# Enter sample data
x <- c(10, 20, 30, 40, 50)

# Population mean
mu <- 25

# Sample size
n <- length(x)

# Sample mean
x_bar <- mean(x)

# Sample standard deviation
s <- sd(x)

# t statistic
t_value <- (x_bar - mu) / (s / sqrt(n))

# Degrees of freedom
df <- n - 1

# Critical t value (5% level)
t_critical <- qt(0.975, df)

# Output
cat("Sample Mean:", x_bar, "\n")
cat("t value:", t_value, "\n")
cat("t critical value:", t_critical, "\n")

# Decision
if (abs(t_value) > t_critical) {
  cat("Result is Significant : Reject Null Hypothesis")
} else {
  cat("Result is Not Significant : Fail to Reject Null Hypothesis")
}
